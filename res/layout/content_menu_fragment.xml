<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    
    >

    <com.example.zhihui.view.NoScrollView
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
         />
    <RadioGroup 
        android:id="@+id/rg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <RadioButton 
            android:id="@+id/rb_home"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_home_selected"
            android:checked="true"
            android:text="首页"
            />
        <RadioButton 
            android:id="@+id/rb_news"
            android:text="新闻中心"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_news_selected"
            />
        <RadioButton 
            android:id="@+id/rb_smart"
            android:text="智慧服务"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_smart_selected"
            />
        <RadioButton 
            android:id="@+id/rb_gov"
            android:text="政务"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_gov_selected"
            />
        <RadioButton 
            android:id="@+id/rb_setting"
            android:text="设置"
            style="@style/BottomTabStyle"
            android:drawableTop="@drawable/btn_setting_selected"
            />
       
    </RadioGroup>

</LinearLayout>
